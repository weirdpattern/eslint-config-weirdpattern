{
  "license": "MIT",
  "version": "1.1.0",

  "name": "eslint-config-weirdpattern",
  "description": " ESLint shareable config for JavaScript projects",
  "author": "patricio trevino <patricio@weirdpattern.com>",

  "main": "./lib/index.js",
  "files": [
    "lib"
  ],

  "repository": {
    "type": "git",
    "url": "https://www.github.com/weirdpattern/eslint-config-weirdpattern.git"
  },

  "engines": {
    "node": ">=6.0.0"
  },

  "keywords": [
    "weirdpattern",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint"
  ],

  "devDependencies": {
    "jest": "^20.0.3",
    "jest-cli": "^20.0.3",
    "minicat": "^1.0.0",
    "coveralls": "^2.13.1"
  },

  "peerDependencies": {
    "eslint": "^3.19.0",
    "babel-eslint": "^7.2.3"
  },

  "scripts": {
    "check": "npm outdated",
    "test": "jest --config .jest.json",
    "coverage": "jest --config .jest.json --coverage",
    "coveralls": "npm run coverage && minicat coverage/lcov.info | coveralls",
    "prepublish": "npm run test && npm run check"
  }
}
